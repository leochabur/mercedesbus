{% extends 'navBar.html.twig' %}

{% block title %}Valores de terceros{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container pt-4">

        <div class="h5 pb-4">Valores de terceros en cartera</div>

        <table class="table table-striped table-hover table-bordered data-table">
        <thead>
            <tr>
                <th>Recibido de...</th>
                <th>Numero</th>
                <th>Fecha Recepcion</th>
                <th>Fecha Pago</th>
                <th>Importe</th>
                <th>Entregado</th>
            </tr>
        </thead>
        <tbody>
        {% for metodo_cheque_cartera in metodo_cheque_carteras %}
            <tr>
                <td>{{ metodo_cheque_cartera.razonSocial|upper }}</td>
                <td>{{ metodo_cheque_cartera.numero }}</td>
                <td data-order="{{ metodo_cheque_cartera.fechaEntrega|date("Y-m-d") }}">{{ metodo_cheque_cartera.fechaEntrega|date("d/m/Y") }}</td>
                <td data-order="{{ metodo_cheque_cartera.fechaPago|date("Y-m-d") }}">{{ metodo_cheque_cartera.fechaPago|date("d/m/Y") }}</td>
                <td>$ {{ metodo_cheque_cartera.importe|number_format(2, ",", ".") }}</td>
                <td>{{ metodo_cheque_cartera.entregado ? 'Si' : 'No' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    </div>
{% endblock %}
