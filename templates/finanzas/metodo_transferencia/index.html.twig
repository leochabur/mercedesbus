{% extends 'navBar.html.twig' %}

{% block title %}Transferencias Realizadas{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container pt-4">

        <div class="h5 pb-4">Transferencias {{ t == 'c' ? 'Recibidas' : 'Realizadas' }}</div>

        <table class="table table-striped table-hover table-bordered data-table">
            <thead>
                <tr>
                    <th>{{ t == 'c' ? 'Cliente' : 'Proveedor' }}</th>
                    <th>Cuenta</th>
                    <th>Fecha</th>
                    <th>Importe</th>
                </tr>
            </thead>
            <tbody>
            {% for metodo_cheque_cartera in metodo_transferencias  %}
                <tr>
                    <td>{{ metodo_cheque_cartera.razonSocial|upper }}</td>
                    <td>  {{ metodo_cheque_cartera.ctacte|upper }} -  {{ metodo_cheque_cartera.banco|upper }} </td>
                    <td data-order="{{ metodo_cheque_cartera.fecha|date("Y-m-d") }}">{{ metodo_cheque_cartera.fecha|date("d/m/Y") }}</td>
                    <td>$ {{ metodo_cheque_cartera.importe|number_format(2, ",", ".") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
{% endblock %}
