{% extends 'navBar.html.twig' %}

{% block title %}{{ label }}{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container pt-4">

        <div class="h5 pb-4">Administrar {{ label }}</div>

        <table class="table table-striped table-hover table-bordered data-table">
        <thead>
            <tr>
                <th>RazonSocial</th>
                <th>Cuit</th>
                <th>Activo</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Mail</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %} 
            <tr>
                <td>{{ cliente.razonSocial }}</td>
                <td>{{ cliente.cuit }}</td>
                <td>{{ cliente.activo ? 'Si' : 'No' }}</td>
                <td>{{ cliente.direccion }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>{{ cliente.mail }}</td>
                <td>
                    <a  class="btn btn-success" href="{{ path('app_administracion_cliente_edit', {'id': cliente.id}) }}">Modificar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_administracion_cliente_new', { code : code }) }}" class="btn btn-primary" >Nuevo {{ label }}</a>
{% endblock %}
