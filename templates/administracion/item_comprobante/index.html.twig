{% extends 'base.html.twig' %}

{% block title %}ItemComprobante index{% endblock %}

{% block body %}
    <h1>ItemComprobante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad</th>
                <th>PrecioUnitario</th>
                <th>PrecioTotal</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_comprobante in item_comprobantes %}
