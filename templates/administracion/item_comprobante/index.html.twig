                <td>{{ item_comprobante.descripcion }}</td>
                <td>
                    <a href="{{ path('app_administracion_item_comprobante_show', {'id': item_comprobante.id}) }}">show</a>
                    <a href="{{ path('app_administracion_item_comprobante_edit', {'id': item_comprobante.id}) }}">edit</a>
                </td>
            </tr>
